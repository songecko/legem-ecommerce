{% extends 'SyliusWebBundle:Frontend:layout.html.twig' %}

{% block main %}
<div id="contact-us">
<div id="map" style="height:300px;margin-top: 20px;">
	<iframe width="100%" height="300" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d24178.916317141564!2d-73.97024494702141!3d40.754006283009524!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c258fe50ab2f47%3A0x23c3dd193eb9a19c!2sNYC+Diamond+District%2C+2+W+47th+St+%231111%2C+New+York%2C+NY+10036%2C+EE.+UU.!5e0!3m2!1ses-419!2sar!4v1410636194397"></iframe>
</div>
<div id="info">
	<div class="container">
		<div class="row">
			<div class="col-md-8 message">
				<h3>Send us a message</h3>
				<p>
					You can contact us with anything related to Legemdary. <br> We'll get in touch with you as soon as possible.
				</p>
				<form action="{{ path('sylius_contact') }}" role="form" id="contact-form" method="post" novalidate="novalidate">
					{{ form_errors(form) }}
					<div class="form-group">
			    		<label for="{{ form.name.vars.id }}">{{ form.name.vars.label }}</label>
						{{ form_widget(form.name) }}
						{{ form_errors(form.name) }}
			  		</div>
			  		<div class="form-group">
			    		<label for="{{ form.email.vars.id }}">{{ form.email.vars.label }}</label>
						{{ form_widget(form.email) }}
			  			{{ form_errors(form.email) }}
			  		</div>
			  		<div class="form-group">
			    		<label for="{{ form.phone.vars.id }}">{{ form.phone.vars.label }}</label>
						{{ form_widget(form.phone, {'attr': {'required': 'false'}}) }}
			  			{{ form_errors(form.phone) }}
			  		</div>
			  		<div class="form-group">
			    		<label for="{{ form.message.vars.id }}">{{ form.message.vars.label }}</label>
						{{ form_widget(form.message, {'attr': {'rows': 6}}) }}
			  			{{ form_errors(form.message) }}
						{{ form_rest(form) }}
			  		</div>
			  		<div class="submit">
			  			<input type="submit" class="button button-small" value="Email us">
			  		</div>
				</form>
			</div>
			<div class="col-md-4 contact">
				<div class="phone">
					<h3>By Phone</h3>
					<p>1-888-332-1714</p>
				</div>
				<div class="social">
					<a href="#" class="fb"><img src="{{ asset('bundles/syliusweb/images/social/fb.png') }}" alt="facebook"></a>
					<a href="#" class="tw"><img src="{{ asset('bundles/syliusweb/images/social/tw.png') }}" alt="twitter"></a>
				</div>
			</div>
		</div>
	</div>
</div>
</div>
{% endblock %}