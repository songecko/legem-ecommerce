{% macro list(posts) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

{% if posts|length > 0 %}
<table class="sylius-products-table table table-bordered">
    <thead>
        <tr>
            <th class="id">{{ sylius_resource_sort('id', '#id') }}</th>
            <th class="info">{{ sylius_resource_sort('title', 'TÃ­tle') }}</th>
            <th class="info">{{ sylius_resource_sort('createdAt', 'Created at') }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for post in posts %}
        <tr id="{{ post.id }}">
            <td class="id">
                {{ post.id }}
            </td>
            <td class="info">
            	{{ post.title }}
            </td>
            <td class="info">
            	{{ post.createdAt|date('d-m-Y') }}
            </td>
            <td class="center-text">
                {{ buttons.edit(path('gecko_legemdary_backend_post_update', {'id': post.id})) }}
                {{ buttons.delete(path('gecko_legemdary_backend_post_delete', {'id': post.id})) }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('bopr.backend.no_results'|trans) }}
{% endif %}

{% endmacro %}
